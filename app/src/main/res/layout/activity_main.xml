<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/valorUno"
        android:layout_width="138dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintEnd_toStartOf="@+id/valorDos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valorDos"
        android:layout_width="138dp"
        android:layout_height="76dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SUMA"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="19dp"
        android:clickable="true"
        android:focusable="true"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/RESTA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RESTA"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="19dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/DIVISION"
        app:layout_constraintStart_toEndOf="@+id/SUMA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DIVISION"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="15dp"
        android:text="/"
        app:layout_constraintEnd_toStartOf="@+id/MULTIPLICACION"
        app:layout_constraintStart_toEndOf="@+id/RESTA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MULTIPLICACION"
        android:layout_width="74dp"
        android:layout_height="56dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="36dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DIVISION"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton"
        android:layout_width="207dp"
        android:layout_height="84dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="102dp"
        android:text="CALCULAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorUno" />

    <EditText
        android:id="@+id/resultado"
        android:layout_width="261dp"
        android:layout_height="100dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton" />

</androidx.constraintlayout.widget.ConstraintLayout>